<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue">

    <androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/participans_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_blue"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/participans_toolbar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/back"
            app:backgroundTint="@color/White_Flight" />

        <TextView
            android:id="@+id/participans_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_thin"
            android:text="@string/participans"
            android:textColor="@color/White_Flight"
            android:textSize="24sp" />

    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/packedr_list_view"
        app:layout_constraintTop_toBottomOf="@id/participans_toolbar"
        android:divider="@drawable/divider"
        android:dividerHeight="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>