<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/participans_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/White_Flight"
        app:strokeWidth="1dp"
        android:padding="5dp"
        android:src="@drawable/person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participans_name"
        app:layout_constraintTop_toTopOf="@id/participans_picture"
        app:layout_constraintBottom_toBottomOf="@id/participans_picture"
        app:layout_constraintLeft_toRightOf="@id/participans_picture"
        android:fontFamily="@font/iciel_gotham_medium"
        android:textSize="20sp"
        android:textColor="@color/White_Flight"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>